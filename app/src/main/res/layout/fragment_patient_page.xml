<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.PatientPage">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welcomeTv">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dateOfBirthTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:text="TextView"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        android:layout_margin="22dp"
        android:id="@+id/goToConsultPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulting"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <Button
        android:id="@+id/goToTreatmentPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:layout_marginTop="12dp"
        android:background="@color/teal_700"
        android:text="Current Treatment"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToConsultPage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="gravity"
            android:layout_gravity="right"
            android:text="logOut"
            />

        <ImageView
            android:id="@+id/signOut"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:background="@drawable/header_image"
            android:src="@drawable/logout" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>